<div class="container">
  <h1>My Tasks</h1>
  <%= link_to "New Task", new_task_path, class: "btn btn-primary mt-2" %>
  <div class="cards">
    <% @tasks.each do |task| %>
      <div class="card mt-2">
        <div class="card-body">
          <%# link to the show page %>
          <h5 class="card-title"><%= task.title %></h5>
          <p class="card-text"><%= task.details %></p>
          <p class="card-text"><%= task.completed ? "Completed" : "Incomplete" %></p>
          <%= link_to "View Task", task_path(task), class: "btn btn-success" %>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-primary" %>
          <%= link_to "Delete", task_path(task[:id]), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
